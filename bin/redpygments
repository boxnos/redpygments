#!/usr/bin/env ruby
require 'redpygments'
require 'optparse'
require 'slim'

options = {
  template: nil,
  output: nil
}
op = OptionParser.new do |opts|
  opts.banner = "Usage: redpygments [options] [files(markdown)]..."

  opts.on('-d', '--default', 'use default template') {|v| options[:template] = Redpygments::default_template}
  opts.on('-s file', '--slim file', 'slim template') {|v| options[:template] = v}
  opts.on('-o file', '--output file', 'output file') {|v| options[:output] = v}
end
op.parse!

begin
  if ARGV.empty?
    lines = ""
    while line = gets
      lines += line
    end
    inner_html = Redpygments.parse_markdown(lines)
  else
    inner_html = ARGV.inject("") do |str, file|
      str + Redpygments.parse_markdown(open(file).read)
    end
  end

  if options[:template]
    html = Redpygments.parse_slim(options[:template], inner_html, pretty: true)
  else
    html = inner_html
  end

  html += "\n"

  if options[:output]
    File.open(options[:output], "w").write html
  else
    print html
  end
rescue
  STDERR.puts $!, op
  exit 1
end

# vim: set ft=ruby:
